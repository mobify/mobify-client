{>base/}

{<content}
    <h2>We've also extracted the first paragraph from your site and placed it in home.tmpl:</h2>
    <p class="extract">
        {content.firstp}
    </p>
    {%script}
        // Single line comment
        window.acc = "Horus";
        // Single line comment
    {/script}
    <script>
        // Single line comment
        window.acc += " Isis";
        /*
            Multiline comment
        */
    </script>
    <script class="dog" type="text/javascript">
        /*
            Multiline comment
        */
        window.acc += " Osiris";
        // Single line comment
    </script>
    <script>
        // Single line comment
        document.write('<p>' + window.acc + '</p>');
        // Single line comment
    </script>

{/content}
